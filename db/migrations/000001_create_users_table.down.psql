DROP TABLE IF EXISTS users;
DROP TABLE IF EXISTS technicians;

DROP EXTENSION IF EXISTS citext;

DROP DOMAIN IF EXISTS email;

CREATE DOMAIN IF NOT EXISTS email AS citext CHECK (value ~ '^[a-zA-Z0-9.!#$%&''*+/=?^_`{|}~-]+@[a-zA-Z0-9](?:[a-zA-Z0-9-]{0,61}[a-zA-Z0-9])?(?:\.[a-zA-Z0-9](?:[a-zA-Z0-9-]{0,61}[a-zA-Z0-9])?)*$');

